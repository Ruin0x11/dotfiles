#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	not-stat Ba
#	bspc desktop -B

super + {s,f}
	bspc node -t "{~floating,~fullscreen}"

# super + {Tab,grave}
# 	bspc {node,desktop} -f last

super + Tab
	bspc node -f last

super + apostrophe
	bspc node -s last

# super + {o,i}
# 	bspc control --record-history off; \
# 	bspc node {older,newer} -f; \
# 	bspc control --record-history on

super + i
	surf google.com

super + q
	chromium

super + e
	emacsclient -c -n

super + {_,shift + } r
	bspc node @$(bspc query -D -d):/ -R {90,270}
#       urxvt -e ranger
#	bspc desktop -E

super + y
	bspc node -n last.manual

# super + m
# 	bspc node -s biggest

super + m
    whid dmenu

super + shift + m
    whid hide

super + ctrl + m
    whid last

super + z
	xlock

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {n,p}
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node @{west -r -10,south -r +10,north -r -10,east -r +10}

super + alt + shift + {h,j,k,l}
	bspc node @{east -r -10,north -r +10,south -r -10,west -r +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

XF86LaunchA
	pkill not-stat ; not-stat Tp

XF86LaunchB
	scrot -e 'mv $f ~/Dropbox/scrot/'

super + Return
	urxvt

super + space
    dmenu_recent_aliases -i -x 458 -y 330 -w 450 -h 20 -l 4 -fn 'Menlo for Powerline-8' -nb '#201F1D' -nf '#eddec9' -sb '#8F3724' -sf '#eddec9'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# VOLUME
#________

### Mute
XF86AudioMute
 amixer set Master toggle ; pkill not-stat ; not-stat Mt

### pavucontrol
super + XF86AudioMute
 pavucontrol

### Volume
#XF86AudioRaiseVolume
# amixer set PCM 1%+ ; pkill not-stat ; not-stat Vp
#
#XF86AudioLowerVolume
# amixer set PCM 1%- ; pkill not-stat ; not-stat Vp

### Master Volume
super + XF86AudioRaiseVolume
 amixer set Master 5%+ ; pkill not-stat ; not-stat Vl

XF86AudioRaiseVolume
 amixer set Master 1%+ ; pkill not-stat ; not-stat Vl

super + XF86AudioLowerVolume
 amixer set Master 5%- ; pkill not-stat ; not-stat Vl

XF86AudioLowerVolume
 amixer set Master 1%- ; pkill not-stat ; not-stat Vl

#
# MPD/NCMPCPP
#_____________

### Toggle
XF86AudioPlay
 mpc toggle

### Ouvrir ncmpcpp
super + XF86AudioPlay
 urxvt -e ncmpcpp

### Infos musique
super + XF86AudioNext
 pkill not-stat ; not-stat Mu

### Suivant
XF86AudioNext
 mpc next

### Previous song if song just began, else replay the begining of the song
XF86AudioPrev
 mpc-script prev

#### Début
#XF86AudioPrev
# mpc seek 0%
#
#### Précédent
#super + XF86AudioPrev
# mpc prev

#
# Luminosité
#____________

### Écran
XF86MonBrightnessUp
 light -A 1 ; pkill not-stat ; not-stat Sc

XF86MonBrightnessDown
 light -U 1 ; pkill not-stat ; not-stat Sc

### Clavier
XF86KbdBrightnessUp
 kbdlight up ; pkill not-stat ; not-stat Kl

XF86KbdBrightnessDown
 kbdlight down ; pkill not-stat ; not-stat Kl
